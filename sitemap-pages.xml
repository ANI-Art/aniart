---
layout:
permalink: /sitemap-pages.xml
lang: en
type: other
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {% for post in site.posts %}{% if post.lang == "en" %}
  <url>
    <loc>http://aniart.eu{{ post.url }}</loc>
    {% assign versions=site.posts|where:"name",post.name %}{% for version in versions %}{% if version.lang != "en" %}<xhtml:link rel="alternate" hreflang="{{ version.lang }}" href="http://aniart.eu{{ version.url }}" />{% endif %}{% endfor %}
    <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
  </url>{% endif %}{% endfor %}
</urlset>