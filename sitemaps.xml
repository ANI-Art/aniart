---
layout:
permalink: /sitemaps.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {% for post in site.posts %}
  <url>
    <loc>http://aniart.eu{{ post.url }}</loc>
    {% assign versions=site.posts|where:"name",post.name %}
    {% for version in versions %}
      <xhtml:link rel="alternate" hreflang="{{ version.lang }}" href="http://aniart.eu{{ version.url }}" />
    {% endfor %}
    <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
  </url>
  {% endfor %}
  {% for imagefile in site.data.galleries[page.lang] %}
  <url>
    <loc>http://aniart.eu/gallery/</loc>
    <image:image>
      <image:loc>http://aniart.eu/{{ imagefile[1].image }}</image:loc>
      <image:caption>{{ imagefile[1].desc }}</image:caption>
      <image:geo_location>Riga, Latvia</image:geo_location>
      <image:title>{{ imagefile[1].desc }}</image:title>
      <image:license>All rights reverved by Nadezda Tarasova</image:license>
    </image:image>
  </url>
  {% endfor %}
</urlset>